<html ng-app = "mainApp">
   <head>
      <title>Angular JS Forms</title>
<link rel="stylesheet" href="/assets/css/chessboard-0.3.0.min.css" />
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
<!-- <script src="/assets/js/chess.min.js"></script>
<script src="/assets/js/chessboard-0.3.0.min.js"></script>			 -->

<script src = "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
</script>
<script src="/assets/js/angular-chess/angular-chess.js">
</script>

  <script src="/assets/js/tournament/mainapp.js"></script>
  <script src="/assets/js/tournament/controllers.js"></script>
   </head>
   
   <body>
      <h2>Problem solve tournament</h2>
    <div ui-view>
      <div ng-controller = "shapeController">
				<div>{{timer}}</div>
      		<!-- <p>{{counter}}</p> -->
				   <button ng-click="stop()">Stop</button>    
         <p>{{message}} <br/> {{type}} </p>

         <div ng-controller = "circleController">
            <p>{{message}} <br/> {{type}} </p>
      <div class="row">
      <nywton-chessgame
			  data-game="game" 
			  data-board="boardA"
			></nywton-chessgame> 
      <div ng-repeat="i in problems track by $index" on-finish-render="ngRepeatFinished">
        <div class="col-xs-6 col-lg-4">
              <div class="col-md-1">
	            </div>
		            <div class="col-md-10">
		            	<h2 style="color: #FF851B; 
		            	font-style: bold;">Point {{i.FES.length}}</h2>
										<div id="board_{{$index}}" ></div>
		              <p><a id="btn_board_{{$index}}"  class="btn btn-default" ui-sref="detail" role="button">View details Â»</a></p>
		              <!-- <a ui-sref="detail({id: i.FEN})">View details</a> -->
		            </div>
	            <div class="col-md-1">
	            </div>
            </div><!--/.col-xs-6.col-lg-4-->
				</div>
				</div> <!-- div.row -->

  
         </div>
         
      </div>
</div>
		
      <script src="/assets/js/myjs/mate2a.js"></script>

   </body>
</html>